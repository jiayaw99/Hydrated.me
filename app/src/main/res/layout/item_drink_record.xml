<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <ImageView
        android:id="@+id/drink_record_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/drink_record_recycle_view_water_icon_description" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/drink_record_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            />
        <TextView
            android:id="@+id/drink_record_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/drink_record_volume"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/drink_record_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@android:color/transparent"
        app:tint="?attr/colorAccent"
        android:contentDescription="@string/delete_drink_record_description" />

</LinearLayout>